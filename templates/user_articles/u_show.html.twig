{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>
	<img src="{{ asset('uploads/images/' ~ article.picturemain)}}">

	<table class="table">
		<tbody>
			<tr>
				<th>Name</th>
				<td>{{ article.name }}</td>
			</tr>
			<tr>
				<th>Catégories</th>
				<td>{{ article.getFkCategory.name }}</td>
			</tr>
			<tr>
				<th>Teaser</th>
				<td>{{ article.teaser }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ article.description }}</td>
			</tr>

			<tr>
				<th>Price</th>
				<td>{{ article.price / 100 ~ ' €' }}</td>
			</tr>
		</tbody>
	</table>


	<h3>Images</h3>
	<img src="{{ asset('uploads/images/' ~ article.picturefront)}}">

	<img src="{{ asset('uploads/images/' ~ article.pictureback)}}">
	<h4>Tags</h4>
	{% if article.getFkTags %}
		{% for tag in article.getFkTags %}
			{{ tag.name }}
		{% endfor %}
	{% endif %}

	<div>
		<h5>Manuel</h5>
		<a href="{{ asset('uploads/images/' ~ article.manual) }}">Voir le manuel (PDF)</a>

		<a href="{{ path('article_index') }}">back to list</a>
	</div>
{% endblock %}
