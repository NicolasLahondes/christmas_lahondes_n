{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<h1>Article index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Teaser</th>
				<th>Description</th>
				<th>Price</th>
				<th>Categories</th>
				<th>Tags</th>
				{# <th>Picturemain</th>
				<th>Picturefront</th>
				<th>Pictureback</th> #}
				<th>Manual</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr>
					<td>{{ article.name }}</td>
					<td>{{ article.teaser }}</td>
					<td>{{ article.description }}</td>
					<td>{{ article.price / 100 ~ ' â‚¬' }}</td>
					{% if article.getFkCategory.name %}
						<td>{{ article.getFkCategory.name }}</td>
					{% endif %}
					<td>
						{% if article.getFkTags %}
							{% for tag in article.getFkTags %}
								{{ tag.name }},
							{% endfor %}
                    {% endif %}
						</td>
					</td>
					{# <td>{{ article.picturemain }}</td>
					<td>{{ article.picturefront }}</td>
					<td>{{ article.pictureback }}</td> #}
					<td>{{ article.manual }}</td>
					<td>
						<a href="{{ path('u_article_show', {'id': article.id}) }}">show</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="12">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}

