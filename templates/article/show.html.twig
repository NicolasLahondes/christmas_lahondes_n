{% extends 'base.html.twig' %}

{% block title %}Article
{% endblock %}

{% block body %}
	<h1>Article</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ article.id }}</td>
			</tr>
			<tr>
				<th>Ean</th>
				<td>{{ article.ean }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ article.name }}</td>
			</tr>
			<tr>
				<th>Teaser</th>
				<td>{{ article.teaser }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ article.description }}</td>
			</tr>
			<tr>
				<th>Price</th>
				<td>{{ article.price }}</td>
			</tr>
			<tr>
				<th>Stock</th>
				<td>{{ article.stock }}</td>
			</tr>
		</tbody>
	</table>

	<img src="{{ asset('uploads/images/' ~ article.picturemain)}}">


	<img src="{{ asset('uploads/images/' ~ article.picturefront)}}">


	<img src="{{ asset('uploads/images/' ~ article.pictureback)}}">
	<div>
		<h5>Manuel</h5>
		<a href="{{ asset('uploads/images/' ~ article.manual) }}">Voir le manuel (PDF)</a>

		<a href="{{ path('article_index') }}">back to list</a>

		<a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
	</div>
	{{ include('article/_delete_form.html.twig') }}
{% endblock %}
